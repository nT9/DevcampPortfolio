<% unless current_user.is_a? GuestUser %>
    <%= form_for @comment, url: "#" do |f| %>
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content, class: 'form-control', placeholder: "You can comment here." %>
      </div>
      
      <%= f.submit "Comment", class: "btn btn-primary" %>
    <% end %>
<% end %>
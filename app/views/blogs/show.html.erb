<div class="col-sm-8 blog-main">
  
  <h2><%= @blog.title %></h2>
  
  <nav class="breadcrumb">
    <%= link_to "Home", root_path, class: 'breadcrumb-item' %>
    <%= link_to @blog.topic.title, topic_path(@blog.topic), class: 'breadcrumb-item' %>

    <span class="breadcrumb-item active"><%= @blog.title %></span>

    <span class="pull-right">
      <%= link_to fa_icon('pencil-square-o'), edit_blog_path(@blog) if logged_in?(:site_admin) %>
      <%= link_to fa_icon('trash'), @blog, method: :delete, data: { confirm: 'Do you want to throw this in the void of the unretrievable?' } if logged_in?(:site_admin) %>
    </span>
  </nav>
  
  <b><%= @blog.topic.title %></b>
  
  <p>
    <%= markdown@blog.body %>
  </p>
  
  <!--Some Markdown code to use-->
  <!--# Heading 1
      ## Heading 2
      ### Heading 3-->
  <!--*italic*
      **bold**
      ***bold-italic***
      [link](http://example.com)-->
  
  <%= render "comments/comment_form" %>
  
  <div id = "comments" data-blog-id = "<%= @blog.id %>">
    <%= render @blog.comments %>
  </div>
  
</div>




<div class="portfolio-container">
    <div class="container portfolio-container">
        <div class="row">
            <div class="col-md-8">
                <%= image_tag @portfolio_item.main_image, width: "100%" %>
                
            </div>

            <div class="col-md-4">
                <h1><%= @portfolio_item.title %></h1>
                
                <hr>
    
                <em><%= @portfolio_item.subtitle %></em>
                
                <p><%= @portfolio_item.body %></p>
                
                <hr>
                
                <h3>Technologies Used:</h3>
                
                <% @portfolio_item.technologies.each do |t| %>
                <p><%= t.name %></p>
                <% end %>
            </div>
        </div>
        
        <div class="row", if logged_in?(:site_admin)>
            <div class="col-md-12">
                <%= link_to "Edit Portfolio", edit_portfolio_url, class: "btn btn-secondary btn-block" if logged_in?(:site_admin) %>
            </div>
        </div>
    </div>
</div>
